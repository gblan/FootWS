<?xml version="1.0" encoding="UTF-8"?>
<blueprint
	xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.osgi.org/xmlns/blueprint/v1.0.0
		http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

	<camelContext xmlns="http://camel.apache.org/schema/blueprint">
		<route>
    		<from uri="activemq:queue:fournisseur.requestQueue"/>
    		<choice>
    			<!-- ASYNCHRONE MAIL RESULT -->
	    		<when>
					<simple>${headers.operationName} == 'obtenir_parcours_mail'</simple>
					<bean ref="log" method="log" />					
					<bean ref="service" method="obtenirParcours" />					
					<bean ref="log" method="log" />					
					<bean ref="service" method="envoiEmail" />
					<bean ref="log" method="log" />					
	    		</when>
	    		<!-- SYNCHRONE XML RESULT -->
	    		<when>
					<simple>${headers.operationName} == 'obtenir_parcours_xml'</simple>
					<bean ref="log" method="log" />					
					<bean ref="service" method="obtenirParcours" />					
					<bean ref="log" method="log" />					
	    		</when>
	    		<!-- AFFICHER_CARTE -->
	    		<when>
					<simple>${headers.operationName} == 'affiche_carte'</simple>
					<bean ref="log" method="log" />					
					<bean ref="service" method="afficherCarte" />					
					<bean ref="log" method="log" />					
	    		</when>
    		</choice>
    		<to uri="activemq:queue:fournisseur.responseQueue"/>
    	</route>   	
	</camelContext>

	<bean id="activemq" class="org.apache.camel.component.jms.JmsComponent">
		<property name="connectionFactory">
			<bean class="org.apache.activemq.ActiveMQConnectionFactory">
				<property name="brokerURL" value="tcp://localhost:61616" />
			</bean>
		</property>
	</bean>
	
	<bean id="log" class="et5.service.camel.Log" />
	<bean id="service" class="et5.service.camel.Service" />
</blueprint>